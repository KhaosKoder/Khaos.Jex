<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>Khaos.JEX</RootNamespace>
    <AssemblyName>Khaos.JEX</AssemblyName>
    <IsPackable>true</IsPackable>
    <Description>High-performance JSON Expression language engine for .NET that enables runtime JSON transformation using a simple, expressive scripting syntax.</Description>
    <PackageTags>json;expression;transformation;jex;jsonpath</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
  </ItemGroup>

</Project>
